{
  "name": "Biazza",
  "version": "1.0",
  "description": "Better Piazza",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://piazza.com/class/*"
      ],
      "run_at": "document_idle",
      "css": [
        "contentScript.css"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "cookies",
    "*://*.piazza.com/"
  ]
}