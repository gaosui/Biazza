{
  "name": "Biazza",
  "version": "1.0",
  "description": "Better Piazza",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "cookies",
    "*://*.piazza.com/"
  ]
}